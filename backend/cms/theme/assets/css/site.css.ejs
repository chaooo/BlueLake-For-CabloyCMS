
body {
    font-family: "Source Code Pro", Tahoma, "Helvetica Neue", Helvetica, "Hiragino Sans GB", "Microsoft YaHei Light", "Microsoft YaHei", "Source Han Sans CN", "WenQuanYi Micro Hei", Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: 14px;
    color: #333;
    width: 100%;
    height: 100%;
    background: #D8E2EB url(<%=url('assets/images/bg.jpg')%>) no-repeat top center;
}

header {
    text-align: left;
    position: relative;
    min-height: 300px;
    padding: 100px 0 50px 0;
}

header h1 {
    font: bold 42px/1.2 "宋体";
    color: #fff;
    text-shadow: 1px 3px 6px #113f6e;
    padding: 0;
    margin: 0;
}

header p {
    padding: .6em 0 0;
    color: #fff;
    text-shadow: 1px 2px 3px #113f6e;
    white-space: normal;
    word-wrap: break-word;
    line-height: 26px;
    margin: 0;
}

header .glyphicon{
    font-size: 12px;
    margin-right: 5px;
}

footer {
    margin: 0;
    padding: 10px;
    text-align: center;
    position: relative;
}

footer .small {
    display: inline-block;
    font-size: 12px;
    line-height: 16px
}


.navbar-default{
    background: none;
    border: none;
    padding: 0;
    position: absolute;
    right: 0;
    top: 0;
}
@media (min-width: 768px){
    .navbar-default .navbar-collapse{
        display: flex!important;
    }
}

.navbar-default .navbar-brand,
.navbar-default .navbar-nav>li>a{
    color: #fff;
    font-size: 16px;
    text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
    text-transform: uppercase;
}

.navbar-default .navbar-nav>.active>a,
.navbar-default .navbar-nav>.active>a:hover,
.navbar-default .navbar-nav>.active>a:focus,
.navbar-default .navbar-nav>li>a:focus,
.navbar-default .navbar-nav>li>a:hover,
.navbar-default .navbar-nav>.open>a,
.navbar-default .navbar-nav>.open>a:focus,
.navbar-default .navbar-nav>.open>a:hover,
.navbar-default .navbar-brand:focus,
.navbar-default .navbar-brand:hover{
    border-bottom: 1px solid #fff;
    -webkit-box-shadow: 0 0 10px #adc2d7 inset;
    box-shadow: 0 0 10px #adc2d7 inset;
    background: none;
    color: #FFF;
}

.dropdown-menu{
    background: #fff;
    border-radius: 4px;
    -webkit-box-shadow: 1px 2px 3px #adc2d7;
    box-shadow: 1px 2px 3px #adc2d7;
    border: 1px solid #adc2d7;
}
.dropdown-menu>li>a,
.dropdown-menu>li>a:focus,
.dropdown-menu>li>a:hover{
    color: #40759b;
}

.dropdown-submenu {
    position: relative;
}

.dropdown-submenu>.dropdown-menu {
    top: 0;
    left: 100%;
    margin-top: -6px;
    margin-left: -1px;
    -webkit-border-radius: 0 6px 6px 6px;
    -moz-border-radius: 0 6px 6px;
    border-radius: 0 6px 6px 6px;
}

.dropdown-submenu:hover>.dropdown-menu {
    display: block;
}

.dropdown-submenu>a:after {
    display: block;
    content: " ";
    float: right;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid;
    border-width: 5px 0 5px 5px;
    border-left-color: #ccc;
    margin-top: 5px;
    margin-right: -10px;
}

.dropdown-submenu:hover>a:after {
    border-left-color: #fff;
}

.dropdown-submenu.pull-left {
    float: none;
}

.dropdown-submenu.pull-left>.dropdown-menu {
    left: -100%;
    margin-left: 10px;
    -webkit-border-radius: 6px 0 6px 6px;
    -moz-border-radius: 6px 0 6px 6px;
    border-radius: 6px 0 6px 6px;
}

.container-site{
  padding-top: 20px;
}
@media (max-width: 768px){
    .container-site{
        padding-top: 0;
    }
    .navbar-header .navbar-toggle{
        margin: 15px 0 0 0;
    }
}

.btn-default,.btn-default:focus{
    border: 1px solid #adc2d7;
    background: #f5f5f5;
    -webkit-box-shadow: 1px 2px 3px #adc2d7;
    box-shadow: 1px 2px 3px #adc2d7;
}

.btn-warning,.btn-warning:focus{
  outline: 0;
}

.search-form {
    display: none;
    margin-bottom: 20px;
    box-sizing: border-box;
    height: 40px;
    width: 100%;
    border-radius: 20px;
    background: #fff;
    -webkit-box-shadow: 1px 2px 3px #adc2d7;
    box-shadow: 1px 2px 3px #adc2d7;
    border: 1px solid #adc2d7;
    overflow: hidden;
}
@media (min-width: 768px){
    .sidebar .search-form{
        display: flex;
    }
}
@media (max-width: 768px){
    header {
        min-height: 200px;
        padding: 50px 0 0 0;
        box-sizing: border-box;
    }
    header .search-form {
        display: flex;
        margin: 50px 0 0 0;
    }
    header .navbar-collapse {
        position: fixed;
        top: 0;
        left: 0;
        margin: 0;
        padding: 0;
        width: 70%;
        height: 100%;
        z-index: 9999;
        background-color: #496280;
    }
    .navbar-default .navbar-brand,
    .navbar-default .navbar-nav>.active>a,
    .navbar-default .navbar-nav>li>a,
    .navbar-default .navbar-nav>.open>a,
    .navbar-default .navbar-nav .open .dropdown-menu>li>a{
        float:none;
        display: block;
        width: 100%;
        border-bottom: 1px solid #74779c;
        color: #fff;
        padding: 10px 15px;
        line-height: 24px;
        height: auto;
    }
    .container-fluid>.navbar-collapse, .container-fluid>.navbar-header, .container>.navbar-collapse, .container>.navbar-header {
        margin: 0;
    }
    .navbar-nav{margin:0;}
    .navbar-default .dropdown-menu{
        padding: 0;
        background: #1a355d;
    }

}

.search-form .form-group {
    width: 100%;
    margin: 0;
    padding: 0;
}
.search-form input.form-control {
    text-indent: 12px;
    line-height: 40px;
    height: 40px;
    border: none;
}
.search-form .btn-default{
    border: none;
    border-left: 1px solid #adc2d7;
    padding: 0 16px;
    height: 40px;
    border-radius: 0;
}
.search-form .glyphicon{
    font-size: 12px;
    margin-right: 5px;
}

section,article,.panel{
    width: 100%;
    margin: 20px 0;
    position: relative;
    background: #fff;
    border-radius: 4px;
    -webkit-box-shadow: 1px 2px 3px #adc2d7;
    box-shadow: 1px 2px 3px #adc2d7;
    border: 1px solid #adc2d7;
}
section,article{
    padding: 30px 30px 10px 30px;
}

.sidebar{
  margin: 20px 0;
}

.article-list .media{
  border-bottom: 1px solid #f0f0f0;
  padding:10px 0;
}

.article-list .media-object{
  width:125px;
  height:100px;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
}

.article-edit{
  font-size: 16px;
  padding-left: 6px;
}
